<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= blogpost.image %> "" class=" card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= blogpost.title%>
                    </h5>
                    <p class="card-text">
                        <%= blogpost.body %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= blogpost.author%>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/posts/<%=blogpost._id%>/edit">Edit</a>
                    <form class="d-inline" action="/posts/<%= blogpost.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Post</button>
                    </form>
                </div>
                <div class="card-footer mb-3"> 2 days ago</div>

            </div>
        </div>
    </div>

    <footer>
        <a href="/posts">All Posts</a>
    </footer>