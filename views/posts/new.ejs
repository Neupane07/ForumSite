<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Add A New Post</h1>
        <div class="col-6 offset-3">
            <form action="/posts" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="post[title]" id="title">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="author">Author</label>
                    <input class="form-control" type="text" name="post[author]" id="author">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="post[image]" id="image">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="body">Body</label>
                    <textarea class="form-control" type="text" name="post[body]" id="body"> </textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Add Post</button>
                </div>
            </form>
            <a class="mb-3" href="/posts/">Cancel</a>
        </div>
    </div>