<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Post</h1>
        <div class="col-6 offset-3">
            <form action="/posts/<%= blogpost._id %>?_method=PUT " method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="post[title]" id="title" value="<%= blogpost.title %>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="author">Author</label>
                    <input class="form-control" type="text" name="post[author]" id="author"
                        value="<%= blogpost.author%>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" name="post[image]" id="image" value="<%= blogpost.image %>">
                </div>
                <div class=" mb-3">
                    <label class="form-label" for="body">Body</label>
                    <textarea class="form-control" type="text" name="post[body]"
                        id="description"><%= blogpost.body %> </textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Post</button>
                </div>
            </form>
            <a class="mb-3" href="/posts/<%= blogpost._id %> ">Cancel</a>
        </div>
    </div>