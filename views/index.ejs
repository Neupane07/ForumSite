<% layout('layouts/boilerplate') %>

    <h1>All Posts</h1>
    <div>
        <a href="/posts/new">Add New Post</a>
    </div>
    <% for(let blogpost of blogposts){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= blogpost.image %> " alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= blogpost.title %>
                        </h5>

                        <p class="card-tect">
                            <small class="text-muted">
                                <%= blogpost.author %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/posts/<%= blogpost.id %> ">View post
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>